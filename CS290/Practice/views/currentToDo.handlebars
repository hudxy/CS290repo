<h1>Hello {{name}} Here is your To Do List!</h1>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<form method="post">
  <label>Enter name of activity: </label>
  <input type="text" name="name" id="toDoName">
</br>
  <label>Enter City Name: </label>
  <input type="text" name="city" id="city">
</br>
  <label>Enter Minimum Temp to accomplish activity: </label>
  <input type="number" name="minTemp" id="minTemp">
</br>
  <input type="submit" name="Add Item" value="Add Item">
</form>
{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>

    <h3 id="thisName">{{this.name}}</h3>
    <p>City task is in: {{this.city}}</p>
    <p>Temp of {{this.city}}: {{this.temp}}</p>

    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
